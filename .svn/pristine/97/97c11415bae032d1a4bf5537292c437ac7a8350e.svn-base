/*
--- config ---
*/

@charset "UTF-8";

//静态文件所在目录
@sprite-url:   "../img/";
@fonticon-url: "fonts/";


//主色调
@mainColor1: #351e47;
@mainColor2: #d8b45e;


//基础背景色
@base-bg: #fff;
    //派生背景色
    @sub-bg01: #f3f3f3;
    //弹窗窗体背景色
    @popwin-bg01: #e6e6e7;


//基础文本色调
@base-fontColor: #666;
    //副文本色调
    @sub-fontColor: #999;
    //近黑标题色调
    @main-topicColor: #444;


//基础字体尺寸
@base-fontSize: 14px;
    //主导航链接字体尺寸
    @main-nav-fontSize: 16px;
    //表单字体尺寸
    @form-fontSize: @base-fontSize;
    //大号字体
    @big-fontSize: 30px;


//盒子边框色调
@base-box-border-color: #e2e2e2;
    //表单项边框色调
    @form-ctrl-border-color: #c6becb;


//基础页面框架宽度
@base-mainBody-width: 1000px;
    //页面构件布局宽度
    @base-section-wrap-width: 100%;

//按钮颜色
@base-btn-color: #705681;
    //主要按钮颜色
    @priamry-btn-color: @base-btn-color;
    //次要按钮颜色
    @secondary-btn-color: #fff;
    //次要按钮颜色
    @tertiary-btn-color: #7f89a0;