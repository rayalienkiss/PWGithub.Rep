@import "_normalize";
@import "_font";
@import url("animate.min.css");
@import "_fonticon";
@import "_config";
@import "_mix";
@import "_sprite";

/*
--- share ---
*/

@charset "UTF-8";

* {
    .border-box();
}

html {
    font-size: 62.5%;
}

html,
body {
    .font-hei();
}

body {
    font-size: @base-fontSize;
    color: @base-fontColor;
    background-color: @base-bg;
}

/* 主导航 */
.nav-bg,
nav {
    background-color: @mainColor1;
    .opacity-custom( 0.9 );
    position: absolute;
    top: 0;
    left: 0;
    width: @base-section-wrap-width;
    height: 82px;
    z-index: 2;
}

nav {
    .opacity-custom( 1 );
    z-index: 3;
    background-color: transparent;
    display: block;

    > div {
        width: @base-mainBody-width;
        margin: 0 auto;
        .clearfix();
    }

    .logo {
        .adv-link-box( left,block,@base-fontSize,0,0,none );
        height: 82px;
        line-height: 82px;

        > img {
            background-color: none;
            .transition( all,0.3s,ease,0 );
            display: inline-block;
            vertical-align: middle;
        }
    }

    .nav {
        .reset-list( left,block,0,0 );
        .float-item( left,block );
        padding: 46px 0 0 25px;
        .clearfix();

        > li {
            padding: 0 0 0 25px;

            > a {
                .link-in-dark( #fff,none );
                display: block;
                font-size: @main-nav-fontSize;
                line-height: 22px;
                .opacity-custom( 0.7 );
                .transition( all,0.3s,ease,0 );

                &:hover,
                &:active,
                &:focus {
                    .opacity-custom( 1 );
                }
            }

            &.active {

                > a {
                    color: @mainColor2;
                    .opacity-custom( 1 );
                    border-bottom: 2px solid @mainColor2;
                }
            }

            &.disabled {
                border-left: 1px solid @sub-fontColor * 0.6;
                margin-left: 25px;

                > a {
                    color: @sub-fontColor;
                    cursor: default;
                    .opacity-custom( 0.9 );
                }
            }
        }
    }

    .sign-box {
        float: right;

        > .p1 {
            .reset-list( left,block,0,0 );
            .clearfix();
            padding: 52px 0 0 0;

            > li {
                padding: 0 7px 0 0;
                margin: 0 0 0 7px;
                border-right: 1px solid #513b64;

                > a {
                    font-size: @base-fontSize - 2px;
                    .link-in-dark( #fff,none );
                    display: block;
                    line-height: 12px;
                    .opacity-custom( 0.4 );
                    .transition( all,0.3s,ease,0 );

                    &:hover,
                    &:active,
                    &:focus {
                        .opacity-custom( 1 );
                    }

                    &.disabled {
                        cursor: default;
                        color: @sub-fontColor;
                        .opacity-custom( 0.4 );
                    }
                }

                &:last-child {
                    border-right: none;
                    padding: 0;
                }
            }
        }

        > .p2 {
            .reset-list( right,block,@base-fontSize + 2px,1 );
            .clearfix();
            padding: 12px 0 0 0;

            > li {

                > span {
                    color: @mainColor2;
                    padding: 0 8px;
                }

                > a {
                    .link-in-dark( @mainColor2,none );
                    display: block;
                    .transition( all,0.3s,ease,0 );
                }
            }

            &.in {
                .reset-list( right,block,@base-fontSize - 2px,1 );
                padding: 13px 0 0 0;
            }
        }
    }
}

/* 页脚 */
footer {
    background-color: @base-bg;
    min-width: @base-mainBody-width;
    border-top: 2px solid #e3e1e1;
    padding: 34px 0 0 0;
    display: block;
    height: 174px;
    margin: 0 auto;

    > div {
        width: @base-mainBody-width;
        margin: 0 auto;
        .clearfix();

        .part-left {
            float: left;
            /*padding: 25px 0 0 0;*/
            padding: 0;

            > p {
                margin: 0;
                padding: 14px 0 0 0;
                font-size: @base-fontSize - 2px;
                color: @sub-fontColor;
                line-height: 1;
            }
        }

        .part-right {
            float: right;
            font-size: 0;
            line-height: 0;

            .cstel-box {
                display: inline-block;
                vertical-align: middle;

                > p {
                    margin: 0 0 5px 0;
                    line-height: 1.2;
                    font-size: @base-fontSize;
                }

                > h3 {
                    margin: 0;
                    font-size: @big-fontSize;
                    line-height: 1.2;
                }
            }

            .code-box {
                border-left: 1px solid #d6d6d6;
                height: 104px;
                display: inline-block;
                vertical-align: middle;
                text-align: center;
                width: 164px;
                margin: 0 0 0 34px;

                > img {
                    display: inline-block;
                    outline: none;
                    width: 72px;
                    height: 72px;
                }

                > p {
                    margin: 8px 0 0 0;
                    font-size: @base-fontSize;
                    line-height: 1.2;
                }
            }
        }
    }

    .footer-nav {
        .reset-list( left,block,@base-fontSize,14px );
        .clearfix();

        > li {
            padding: 0 10px 0 0;
            margin: 0 10px 0 0;
            border-right: 1px solid @base-fontColor;

            > a {
                .link( @base-fontColor,0.2,none );
                .transition( all,0.3s,ease,0 );

                &.disabled {
                    color: @sub-fontColor;
                    cursor: default;
                }
            }

            &:last-child {
                padding: 0;
                margin: 0;
                border-right: none;
            }
        }
    }

    &.index {

        > .show {
            display: none;
        }
    }
}

/* 合作伙伴 */
.partners {
    .reset-list( left,block,0,0 );
    .clearfix();
    padding: 30px 0 0 0;

    > li {
        padding: 0 25px 25px 0;

        > a {
            .adv-link-box( none,block,@base-fontSize - 2px,0,1px,@base-box-border-color );
            cursor: default;

            > img {
                width: 180px;
                height: 70px;
                .transition( all,0.3s,ease,0 );
            }
        }

        &:nth-child(5n) {
            padding: 0 0 10px 0;
        }
    }
}

/* tab */
.tab-pane {
    display: none;

    &.active {
        display: block;
    }
}

/* 典型按钮 */
.default-btn {
    outline: 0;
    border: 0;
    height: 38px;
    line-height: 36px;
    display: inline-block;
    border-bottom-width: 2px;
    border-bottom-style: solid;
    width: 158px;
    vertical-align: middle;
    text-align: center;

    &:active {
        border-bottom-width: 0;
        border-bottom-style: none;
        border-top-width: 2px;
        border-top-style: solid;
    }

    &.primary {
        background-color: @priamry-btn-color;
        border-color: @priamry-btn-color * 0.7;
        color: #fff;
    }

    &.secondary {
        background-color: @secondary-btn-color;
        border: 1px solid @priamry-btn-color;
        .link( @priamry-btn-color,0.8,none );
    }

    &.link-btn {
        vertical-align: middle;
        .link( @priamry-btn-color,0.8,none );
        border: none;
        line-height: 38px;
        width: auto;
        margin: 0 0 0 20px;
    }

    &.tertiary {
        background-color: @tertiary-btn-color;
        border-color: @tertiary-btn-color * 0.7;
        width: auto;
        position: absolute;
        right: 0;
        top: 12px;
        height: 46px;
        line-height: 44px;
        .link( #fff,1,none );
        padding: 0 20px;
    }
}

/* 典型弹窗 */
.popwin-bg {
    background: url('@{sprite-url}black70.png');
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;
    display: none;


    > div {
        margin: 0 auto;
        width: @base-mainBody-width;
        min-width: @base-mainBody-width;
        text-align: center;
        height: 100%;

        > b {
            height: 100%;
            vertical-align: middle;
            display: inline-block;
        }
    }
}

.popwin-wrap {
    display: inline-block;
    vertical-align: middle;
}

.popwin-close {
    position: absolute;
    right: -30px;
    top: 0;
    .font-tag-square( #fff,@base-fontSize+4px,#333,30px,0,none,block );
    text-decoration: none;
    outline: 0;
    display: block;
}

/* 登陆注册弹窗 */
.sign-tab-wrap {
    font-size: 0;
    line-height: 0;
    position: absolute;
    top: -41px;
    left: 5px;
    .reset-list( left,block,@base-fontSize + 2px,46px );

    > li {

        > a {
            .link-in-dark( #fff,none );
            display: block;
            text-align: center;
            background-color: #535253;
            .opacity-custom( 0.7 );
            height: 46px;
            padding: 0 60px;
        }

        &.active {

            > a {
                background-color: #7b5e8e;
                .opacity-custom( 1 );
            }
        }
    }
}

.sign-wrap {
    width: 594px;
    background: url('@{sprite-url}white40.png');
    padding: 6px;
    text-align: left;
    position: relative;

    > div {
        min-height: 286px;

        > b {
            color: #fff;
            text-align: center;
            line-height: 286px;
            font-weight: 500;
            display: block;
            font-size: @big-fontSize;
        }

        .forms {
            padding: 28px 224px 28px 0;
            background: url('@{sprite-url}logo02.png') @popwin-bg01 394px 28px no-repeat;
            position: relative;

            .default-btn {

                &.secondary {
                    position: absolute;
                    bottom: 28px;
                    right: 40px;
                }
                    &.disbled-btn{
                        background-color: #a8a8a8;
                        border-color:#8b8b8b;
                        color:#fff;
                    }
            }

            > p {
                margin: 0;
                position: absolute;
                bottom: 70px;
                right: 40px;
                width: 158px;
                text-align: center;
                color: @main-topicColor;
            }
        }
    }

    .sign-left {
        border-right: 1px dashed @base-box-border-color * 0.8;
        padding: 0 40px;

        > h1 {
            margin: 0;
            font-size: @base-fontSize + 2px;
            line-height: 1.4;
            color: @main-topicColor;
            font-weight: 500;
        }
    }
}

/* 表单 */
.form-ctrl-wrap {

    &.signfrom {
        padding: 12px 0;
    }

    &.for-ic {
        padding-right: 138px;
    }
}

.form-ctrl-wrap,
.form-ctrl-box {
    position: relative;
}

.form-ctrl {
    font-size: @base-fontSize - 2px;
    background-color: #fff;
    color: @base-fontColor;
    border: 5px solid @form-ctrl-border-color;
    line-height: 18px;
    padding: 9px 36px 9px 15px;
    width: 100%;
    height: 46px;
    outline: 0;
    .transition( all,0.3s,ease,0 );

    &:focus {
        border-color: @form-ctrl-border-color * 0.9;
    }
}

.form-label {
    position: relative;
    display: inline-block;
    padding: 0 22px;
    line-height: 18px;
    font-size: @base-fontSize - 2px;

    > input[type='checkbox'],
    input[type='radio'] {
        display: block;
        position: absolute;
        top: 2px;
        left: 0;
    }

    .label-link {
        .link( @mainColor1 + #111,0.9,none );
    }
}

/* 表单验证样式 */
.fv-wrap {
    position: absolute;
    right: 0;
    top: -38px;
    background-color: #caa244;
    color: #fff;
    line-height: 26px;
    height: 28px;
    padding: 0 10px;
    border-bottom: 2px solid #caa244 * 0.7;
    font-size: @base-fontSize - 2px;
    display: none;
    white-space: nowrap;

    > span {
        .arrow-up-or-down( border-top,10px,10px,#caa244 );
        display: block;
        position: absolute;
        bottom: -10px;
        right: 30px;

        &.shadow {
            .arrow-up-or-down( border-top,12px,12px,#caa244 * 0.7 );
            bottom: -12px;
            margin-left: -12px;
        }
    }
}
