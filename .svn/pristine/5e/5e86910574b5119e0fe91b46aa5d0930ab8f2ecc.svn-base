/* 重置合作伙伴样式 */
.partners {
    width: 844px;
    margin: 0 auto;
    padding: 30px 0 0 0;
    .clearfix();

    > div {
        padding: 0 35px 30px 0;
        float: left;

        > a {
            .adv-link-box( none,block,@base-fontSize - 2px,0,2px,@base-box-border-color );
            cursor: default;

            > img {
                width: 258px;
                height: 92px;
                .rounded( 5px );
            }
        }

        > p {
            text-align: center;
            line-height: 1.2;
            margin: 0;
            .text-hide();
            font-size: @base-fontSize + 4px;
            padding: 10px 0 0 0;
        }

        &:nth-child(5n) {
            padding: 0 35px 10px 0;
        }

        &:nth-child(3n) {
            padding: 0 0 10px 0;
        }
    }
}

.solution-banner-wrap.nav1-bg .solution-base,
.solution-banner-wrap.nav2-bg .solution-base,
.solution-banner-wrap.nav3-bg .solution-base,
.solution-banner-wrap.nav4-bg .solution-base,
.solution-banner-wrap.nav5-bg .solution-base,
.solution-banner-wrap.nav6-bg .solution-base,
.solution-banner-wrap.nav7-bg .solution-base {
    display: none;
}

.fadeInDown {
    .animation-delay( 1s );
}

footer {

    &.index {
        position: absolute;
        width: 100%;
        top: 86%;
        left: 0;
    }
}

