    .solution-scroll-pages-wrap {
        width: 100%;
        top: 50%;
        margin-top: -249px;
        position: absolute;
        height: 498px;
        overflow: hidden;
        display: none;

        .scroll-btn {
            .link( #fff,0.8,none );
            display: block;
            height: 498px;
            line-height: 498px;
            text-align: center;
            font-size: 100px;
            width: 130px;
            position: absolute;
            top: 0;

            &.left {
                left: 0;
            }

            &.right {
                right: 0;
            }
        }

        > ul {
            .reset-list( left,block,0,0 );
            .clearfix();
            width: 100%;
            position: absolute;
            left:0;

            > li {
                height: 498px;
                width: 100%;
            }
        }

        .scroll-page {
            width: @base-mainBody-width;
            background: url('@{sprite-url}white87.png?v=20150525');
            height: 478px;
            border: 10px solid #fff;
            margin: 0 auto;
            color: @main-topicColor;
            position: relative;

            > h1 {
                font-size: 48px;
                line-height: 1.2;
                text-align: center;
                margin: 0;
                padding: 54px 0 44px 0;
            }

            > h2 {
                width: 724px;
                height: 30px;
                margin: 0 auto;

                &.c1 {
                    background: url('@{sprite-url}scroll-page-title.png?v=20150525') transparent center top no-repeat;
                }

                &.c2 {
                    background: url('@{sprite-url}scroll-page-title2.png?v=20150525') transparent center top no-repeat;
                    margin: 50px auto 0 auto;
                    width: 844px;
                }
            }

            > p {
                margin: 24px auto 0 auto;
                line-height: 1.8;
                width: 724px;
                height: 156px;
                font-size: @base-fontSize;
                text-align: justify;
                overflow: hidden;
            }

            .note {
                width: 478px;
                height: 56px;
                border: 2px solid #949496;
                text-align: center;
                font-size: @base-fontSize + 6px;
                line-height: 52px;
                position: absolute;
                bottom: 20px;
                left: 50%;
                margin-left: -239px;
            }
        }

        .as {
            margin: 0 40px;
            position: relative;
            overflow: hidden;
            padding: 40px 0 40px 50%;
            height: 100%;

            > img {
                width: 378px;
                display: block;
                position: absolute;
                left: 0;
                top: 40px;
            }

            > h1 {
                font-size: @base-fontSize + 6px;
                line-height: 1.2;
                color: @mainColor2;
                margin: 0 0 14px 0;
                font-weight: 500;
            }

            .as-text-box {
                margin: 0 0 14px 0;
                line-height: 1.8;
                padding: 0 0 14px 0;
                border-bottom: 1px dashed @base-box-border-color * 0.8;
                font-size: @base-fontSize;

                th {
                    padding: 0 15px 0 0;
                    white-space: nowrap;
                    vertical-align: top;
                }
            }
        }
    }

    &.index {
        background: url('@{sprite-url}banner_1920/solution_banner01.jpg?v=20150525') #fff center center no-repeat;
        background-size: cover;
        position: absolute;
        top: 0;
        left: 0;
        height: 86%;
        width: 100%;  
    }

    &.nav1-bg,
    &.nav2-bg,
    &.nav3-bg,
    &.nav4-bg,
    &.nav5-bg,
    &.nav6-bg,
    &.nav7-bg {
        position: absolute;
        top: 0;
        left: 0;
        height: 86%;
        width: 100%;
        
        .solution-base {
            display: none;
        }

        .solution-nav-wrap > a {
            display: none;
        }
    }

    &.nav1-bg {
        background: url('@{sprite-url}banner_1920/bac3.jpg?v=20150525') #fff center center no-repeat;
        background-size: cover;

        #nav1scroll {
