@import "_share";

/*
--- bottomNavPage ---
*/

@charset "UTF-8";

/* banner区域 */
.bnp-banner-wrap {
    height: 214px;
    overflow: hidden;
    margin: 82px auto 0 auto;
    min-width: @base-mainBody-width;

    &.our-partners {
        background: url('@{sprite-url}banner_1920/bottomNavPage_banner01.jpg?v=20150522') #fff center top no-repeat;
    }

    &.legal-statement {
        background: url('@{sprite-url}banner_1920/bottomNavPage_banner02.jpg?v=20150522') #fff center top no-repeat;
    }

    &.privacy-clause {
        background: url('@{sprite-url}banner_1920/bottomNavPage_banner03.jpg?v=20150522') #fff center top no-repeat;
    }

    &.recruitment-post {
        background: url('@{sprite-url}banner_1920/bottomNavPage_banner04.jpg?v=20150522') #fff center top no-repeat;
    }

    &.about-us {
        background: url('@{sprite-url}banner_1920/bottomNavPage_banner05.jpg?v=20150522') #fff center top no-repeat;
    }
}

/* 内容框架 */
.bnp-content-wrap {
    width: @base-mainBody-width;
    margin: 45px auto 0 auto;
    min-height: 300px;
}

.bnp-topic-wrap {
    border-bottom: 1px solid @base-box-border-color;
    padding: 0 0 12px 0;

    > h1 {
        margin: 0;
        color: @main-topicColor;
        line-height: 1;
        font-weight: 500;
        font-size: @big-fontSize;
        border-left: 3px solid @main-topicColor;
        padding: 0 0 0 18px;

        > span {
            font-size: @base-fontSize + 6px;
            .opacity-custom( 0.35 );
            vertical-align: text-bottom;
        }
    }
}

/* 文本定义 */
.bnp-text-wrap {
    padding: 30px;

    .map-wrap {
        width: 100%;
        .clearfix();
        background: url('@{sprite-url}map-wrap-bg.jpg') transparent center top repeat-y;
        margin: 20px 0 0 0;

        p {
            font-size: 18px;
            line-height: 1.4;
            color: @main-topicColor;
            margin: 0 0 10px 0;

            > span {
                color: @sub-fontColor;
                font-size: @base-fontSize;
            }
        }

        .map-box {
            width: 298px;
        }

        .left-map {
            float: left;
        }

        .right-map {
            float: right;
        }
    }

    > p {
        margin: 0;
        line-height: 1.8;
        padding: 0 0 10px 0;
        text-indent: 2em;
        text-align: justify;
    }

    > ol {
        line-height: 1.8;
        margin-top: 0;
    }

    > h1 {
        color: @mainColor2;
        font-size: @base-fontSize + 6px;
        font-weight: 500;
        margin: 0;
        line-height: 1.2;
        padding: 0 0 15px 0;
    }

    > h2 {
        font-size: @big-fontSize;
        font-weight: 500;
        margin: 0 0 34px 0;
        line-height: 1.2;
        padding: 0 0 0 20px;
        border-left: 4px solid @base-fontColor;
    }

    > img {
        display: block;
        max-width: 100%;
        margin: 0 auto 20px auto;
    }

    .rs-detail-head {
        border-bottom: 1px solid @base-box-border-color;
        padding: 0 0 20px 0;
        margin: 0 0 20px 0;

        > h5 {
            color: #693883;
            font-size: @base-fontSize + 10px;
            font-weight: 500;
            margin: 0;
            line-height: 1.4;
            text-align: center;
            padding: 0 0 10px 0;
        }

        .rshead-ul {
            text-align: center;
            display: block;
            .reset-list( none,inline-block,@base-fontSize - 2px,1.2 );

            > li {
                color: @sub-fontColor;
                .text-hide();
                padding: 0 15px;
                border-right: 1px solid @sub-fontColor;
                vertical-align: middle;

                > b {
                    font-weight: 500;
                    color: @mainColor2;
                }

                &:last-child {
                    border-right: none;
                }
            }
        }
    }
}

/* 左右tab结构 */
.bnp-tab-wrap {
    .clearfix();
    padding: 0 0 100px 0;

    > .wrap-left {
        width: 22%;
        float: left;
    }

    > .wrap-right {
        width: 78%;
        float: left;
        border: 1px solid @base-box-border-color;
        border-top: none;
        min-height: 800px;
        padding: 50px;
    }

    .bnp-tabs {
        .reset-list( none,block,@base-fontSize,1.4 );

        > li {

            > a {
                .link( @base-fontColor,0.8,none );
                padding: 15px 30px;
                border-bottom: 1px solid @base-box-border-color;
                position: relative;
                display: block;

                > em {
                    background-color: @base-fontColor;
                    height: 4px;
                    width: 4px;
                    display: block;
                    position: absolute;
                    top: 22px;
                    left: 14px;
                }

                &:hover,
                &:focus,
                &:active {
                    color: @mainColor2;

                    > em {
                        background-color: @mainColor2;
                    }
                }
            }

            &.active {

                > a {
                    color: @mainColor2;
                    border-right: 1px solid #fff;
                    margin: 0 -1px 0 0;
                    border-bottom-color: @mainColor2;

                    > em {
                        background-color: @mainColor2;
                    }
                }
            }
        }
    }

    &.aboutus {

        * {
            .transition( all,0.3s,ease,0 );
        }

        > .wrap-left {
            width: 18%;

            .tel-case {
                text-align: center;
                border: 1px solid #f2f2f2;
                margin: 30px 0 0 0;

                .ta {
                    border-bottom: 1px solid #f2f2f2;
                    background-color: #fbfbfb;
                    margin: 0 0 20px 0;

                    > h1, h2 {
                        font-size: @base-fontSize + 2px;
                        line-height: 1.2;
                        margin: 0;
                        font-weight: 500;
                        padding: 15px 0 0 0;
                    }

                    > h2 {
                        font-size: @base-fontSize + 8px;
                        padding: 5px 0 15px 0;
                    }
                }

                > img {
                    margin: 0 auto;
                    height: 100px;
                    width: 100px;
                    display: block;
                }

                > span {
                    display: block;
                    padding: 10px 0 25px 0;
                }
            }
        }

        > .wrap-right {
            width: 82%;
            border: none;
            padding: 0 50px 50px 50px;

            .bnp-text-wrap {
                padding: 6px 0 30px 0;
                margin: 0 15px;
            }
        }

        .bnp-tabs {

            > li {
                line-height: 54px;
                font-size: @base-fontSize + 10px;

                > a {
                    .link( @base-fontColor,0.8,none );
                    padding: 0 0 0 50px;
                    border-bottom: 1px solid @base-box-border-color;

                    > i {
                        position: absolute;
                        top: 16px;
                        left: 0;
                        color: @sub-fontColor;
                    }

                    &:hover,
                    &:focus,
                    &:active {
                        color: #693883;

                        > i {
                            color: #693883;
                            .opacity-custom( 0.7 );
                        }
                    }

                    &.disabled {
                        color: @sub-fontColor;
                        cursor: default;
                        .opacity-custom( 0.4 );

                        > i {
                            color: @sub-fontColor;
                        }
                    }
                }

                &.active {

                    > a {
                        color: #693883;
                        border-right: none;
                        margin: 0;

                        > i {
                            color: #693883;
                        }

                        > em {
                            background-color: #693883;
                        }
                    }
                }
            }
        }
    }
}

/* 最新动态列表 */
.rslist {
    .reset-list( none,block,0,0 );

    > li {
        padding: 0 0 28px 0;
        margin: 0 0 28px 0;
        border-bottom: 1px solid @base-box-border-color;

        > .rstopic {
            .link-in-dark( #693883,none );
            font-size: @base-fontSize + 4px;
            position: relative;
            padding: 0 100px 0 0;
            display: block;
            .text-hide();
            line-height: 1.8;

            > span {
                color: @mainColor2;
                border-bottom: 1px solid @mainColor2;
                font-size: @base-fontSize;
                position: absolute;
                right: 0;
                top: 6px;
                line-height: 1.2;
            }
        }

        > p {
            margin: 0;
            font-size: @base-fontSize;
            line-height: 1.8;
            .text-hide();
        }

        > b {
            display: block;
            font-weight: 500;
            font-size: @base-fontSize - 2px;
            line-height: 1.8;
            color: @sub-fontColor;
        }
    }
}

/* 联系方式 */
.contacts {
    width: 90%;
    margin: 36px 0 0 0;
    background-color: #7b85aa;
    color: #fff;
    padding: 15px;

    > h1 {
        font-size: @base-fontSize + 6px;
        font-weight: 500;
        margin: 0;
        line-height: 1.4;
    }

    > p {
        font-size: @base-fontSize;
        margin: 0;
        line-height: 1.4;
    }

    > .line {
        .opacity-custom( 0.3 );
        background-color: #fff;
        height: 1px;
        margin: 15px 0;
    }
}

//媒体查询样式
@media ( min-width: 320px ) {

    .bnp-banner-wrap {
        min-width: @base-mainBody-width + 80px;
    }

    .bnp-content-wrap {
        width: @base-mainBody-width + 80px;
        padding: 0 40px;

    }
}

@media ( min-width: 1024px ) {

    .bnp-banner-wrap {
        min-width: @base-mainBody-width;
    }

    .bnp-content-wrap {
        width: @base-mainBody-width;
        padding: 0;
    }
}





