.footer {
    background-color: @base-bg;
    min-width: @base-mainBody-width;
    border-top: 2px solid #e3e1e1;
    padding: 15px 0 0 0;
    display: block;
    margin: 0 auto;

    &.index {
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 3;
        width: @base-section-wrap-width;
    }

    > div {
        width: @base-mainBody-width;
        margin: 0 auto;
        padding: 0 0 20px 0;
        .clearfix();

        .part-left {
            float: left;
            padding: 0;

            > p {
                margin: 0;
                padding: 14px 0 0 0;
                font-size: @base-fontSize - 2px;
                color: @sub-fontColor;
                line-height: 1;
            }
        }

        .part-right {
            float: right;
            font-size: 0;
            line-height: 0;

            .cstel-box {
                display: inline-block;
                vertical-align: middle;

                > p {
                    margin: 0 0 5px 0;
                    line-height: 1.2;
                    font-size: @base-fontSize;
                }

                > h3 {
                    margin: 0;
                    font-size: @big-fontSize;
                    line-height: 1.2;
                }
            }

            .code-box {
                border-left: 1px solid #d6d6d6;
                height: 104px;
                display: inline-block;
                vertical-align: middle;
                text-align: center;
                width: 164px;
                margin: 0 0 0 34px;

                > img {
                    display: inline-block;
                    outline: none;
                    width: 72px;
                    height: 72px;
                }

                > p {
                    margin: 8px 0 0 0;
                    font-size: @base-fontSize;
                    line-height: 1.2;
                }
            }
        }
    }

    .footer-nav {
        .clearfix();

        > div {
            padding: 0 10px 0 0;
            margin: 0 10px 0 0;
            border-right: 1px solid @base-fontColor;
            font-size: @base-fontSize;
            line-height: 14px;
            float: left;

            > a {
                .link( @base-fontColor,0.2,none );
                .transition( all,0.3s,ease,0 );

                &.disabled {
                    color: @sub-fontColor;
                    cursor: default;
                }
            }

            &:last-child {
                padding: 0;
                margin: 0;
                border-right: none;
            }
        }
    }
}

