@import "_share";

/*
--- pacService ---
*/

@charset "UTF-8";

/* banner区域 */
.banner-wrap {
    height: 600px;
    overflow: hidden;
    display: block;
    margin: 82px auto 0 auto;
    min-width: @base-mainBody-width;

    > div {
        width: @base-mainBody-width;
        margin: 0 auto;
        position: relative;
    }

    .PSBtitle {
        display: block;
        margin: 96px 0 24px 0;
    }

    .PSBsubText {
        line-height: 1.4;
        padding: 16px;
        .rounded( 5px );
        border: 2px dashed #d2d3d4;
        font-size: @base-fontSize;
        margin: 0;
        max-width: 554px;
    }

    &.PSB {
        background: url('@{sprite-url}banner_1920/PSBanner01.jpg?v=20150522') #fff center top no-repeat;
    }

    &.CSB {
        background: url('@{sprite-url}banner_1920/CSBanner01.jpg?v=20150522') #fff center top no-repeat;

        .PSBtitle {
            margin: 96px 0 24px 450px;
        }

        .PSBsubText {
            margin: 0 0 0 450px;
        }
    }
}

/* 描述区域 */
.detail-wrap {
    display: block;
    width: @base-mainBody-width;
    margin: 0 auto;
    padding: 50px 0 0 0;

    > h1 {
        margin: 0;
        font-weight: 500;
        font-size: @big-fontSize + 4px;
        border-bottom: 1px solid #e5e5e5;
        line-height: 1.2;
        padding-bottom: 15px;
    }

    .detail-box {
        padding: 0 35% 0 0;
        background: url('@{sprite-url}PSdetail_Bg.jpg?v=20150522') transparent 580px bottom no-repeat;
        margin: 30px 0 0 0;

        &.cs {
            background: url('@{sprite-url}CSdetail_Bg.jpg?v=20150526') transparent left bottom no-repeat;
            padding: 0 0 0 46%;
        }
    }
}

.details {
    position: relative;
    padding: 0 0 15px 66px;

    > h1 {
        font-size: @base-fontSize + 6px;
        font-weight: 500;
        margin: 0;
        line-height: 1.4;
    }

    > p {
        font-size: @base-fontSize;
        color: @sub-fontColor;
        margin: 0;
        line-height: 1.4;
    }

    > b {
        position: absolute;
        top: 0;
        left: 0;
        font-weight: 500;
        .font-tag-square( #fff,@big-fontSize,@mainColor2,46px,50%,none,block );
    }
}

/* 2C2B详情页面 合作伙伴 */
.partner-wrap {
    background-color: @sub-bg01;
    padding: 44px 0;
    margin: 45px 0 0 0;

    > div {
        width: @base-mainBody-width;
        margin: 0 auto;

        > h1 {
            margin: 0;
            font-weight: 500;
            font-size: @base-fontSize + 6px;
            line-height: 1.2;
        }
    }
}




